  text-align: center;
  left: 42%;
  top: 85%;
  width: 3em;
  height: 3em;
  border-radius: 2em;
  border: 8rpx solid rgb(255, 195, 66);
  /* background-image: url('https://687a-hztx-8bc80c-1257718290.tcb.qcloud.la/addsym.png?sign=eaa23d65ec2c5d074291534b15237b7d&t=1557233488'); */
